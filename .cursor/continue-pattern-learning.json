{
  "pattern_learning_integration": {
    "version": "1.0.0",
    "enabled": true,
    "description": "Continue learns from user's coding patterns to provide personalized suggestions"
  },
  "learning_sources": {
    "autocomplete_suggestions": {
      "enabled": true,
      "track_accepted": true,
      "track_rejected": true,
      "track_modified": true,
      "learning_weight": 0.8
    },
    "code_edits": {
      "enabled": true,
      "track_inline_edits": true,
      "track_refactorings": true,
      "track_quick_fixes": true,
      "learning_weight": 0.9
    },
    "slash_commands": {
      "enabled": true,
      "track_usage_frequency": true,
      "track_custom_commands": true,
      "learning_weight": 0.7
    },
    "chat_interactions": {
      "enabled": true,
      "track_questions": true,
      "track_explanations": true,
      "track_preferences": true,
      "learning_weight": 0.6
    }
  },
  "pattern_categories": {
    "naming_conventions": {
      "enabled": true,
      "learns": [
        "variable_naming_style",
        "function_naming_style",
        "class_naming_style",
        "file_naming_style",
        "constant_naming_style"
      ],
      "applies_to": [
        "autocomplete",
        "code_generation",
        "refactoring"
      ]
    },
    "code_structure": {
      "enabled": true,
      "learns": [
        "indentation_style",
        "bracket_placement",
        "line_length_preferences",
        "import_organization",
        "function_ordering"
      ],
      "applies_to": [
        "autocomplete",
        "code_generation",
        "formatting"
      ]
    },
    "architecture_patterns": {
      "enabled": true,
      "learns": [
        "preferred_design_patterns",
        "component_structure",
        "dependency_injection_style",
        "error_handling_patterns",
        "async_patterns"
      ],
      "applies_to": [
        "code_generation",
        "refactoring",
        "suggestions"
      ]
    },
    "documentation_style": {
      "enabled": true,
      "learns": [
        "comment_style",
        "jsdoc_preferences",
        "inline_comment_frequency",
        "documentation_detail_level"
      ],
      "applies_to": [
        "documentation_generation",
        "code_generation"
      ]
    },
    "testing_patterns": {
      "enabled": true,
      "learns": [
        "test_structure",
        "assertion_style",
        "mock_patterns",
        "test_naming",
        "coverage_preferences"
      ],
      "applies_to": [
        "test_generation",
        "code_generation"
      ]
    },
    "import_patterns": {
      "enabled": true,
      "learns": [
        "import_order",
        "import_grouping",
        "alias_preferences",
        "relative_vs_absolute"
      ],
      "applies_to": [
        "autocomplete",
        "code_generation"
      ]
    },
    "error_handling": {
      "enabled": true,
      "learns": [
        "try_catch_usage",
        "error_message_style",
        "logging_patterns",
        "error_recovery_strategies"
      ],
      "applies_to": [
        "code_generation",
        "refactoring"
      ]
    },
    "performance_patterns": {
      "enabled": true,
      "learns": [
        "optimization_preferences",
        "caching_strategies",
        "async_usage",
        "memory_management"
      ],
      "applies_to": [
        "code_generation",
        "optimization_suggestions"
      ]
    }
  },
  "learning_algorithm": {
    "mode": "adaptive",
    "learning_rate": "fast",
    "memory_retention": "permanent",
    "pattern_confidence_threshold": 0.7,
    "minimum_samples": 3,
    "update_frequency": "real-time",
    "feedback_loop": {
      "enabled": true,
      "tracks": [
        "suggestion_acceptance_rate",
        "suggestion_modification_rate",
        "suggestion_rejection_rate"
      ],
      "adjusts": [
        "suggestion_confidence",
        "pattern_weights",
        "learning_priorities"
      ]
    }
  },
  "personalization": {
    "enabled": true,
    "level": "ultra_personalized",
    "adapts_to": [
      "coding_style",
      "preferences",
      "habits",
      "workflow",
      "project_conventions"
    ],
    "personalization_speed": "fast",
    "cross_project_learning": {
      "enabled": true,
      "shares_patterns_across_projects": true,
      "project_specific_overrides": true
    }
  },
  "autocomplete_enhancement": {
    "enabled": true,
    "uses_learned_patterns": true,
    "confidence_boosting": {
      "enabled": true,
      "boost_factor": 1.5,
      "applies_when": "pattern_matches_learned_style"
    },
    "suggestion_ranking": {
      "enabled": true,
      "prioritizes": [
        "learned_patterns",
        "user_preferences",
        "project_conventions",
        "best_practices"
      ]
    },
    "multi_line_suggestions": {
      "enabled": true,
      "uses_pattern_learning": true,
      "max_lines": 10
    }
  },
  "integration_with_pattern_learning_agent": {
    "enabled": true,
    "sync_frequency": "real-time",
    "data_flow": {
      "continue_to_agent": [
        "accepted_suggestions",
        "user_edits",
        "coding_patterns",
        "preferences"
      ],
      "agent_to_continue": [
        "learned_patterns",
        "pattern_confidence",
        "recommendations",
        "best_practices"
      ]
    },
    "feedback_loop": {
      "enabled": true,
      "continuous_improvement": true,
      "symbiotic_learning": true
    }
  },
  "storage": {
    "location": ".cursor/pattern-learning-data/",
    "format": "json",
    "encryption": false,
    "backup": {
      "enabled": true,
      "frequency": "daily",
      "retention": "30_days"
    }
  },
  "privacy": {
    "local_only": true,
    "no_telemetry": true,
    "no_cloud_sync": false,
    "user_controlled": true
  },
  "performance": {
    "cache_patterns": true,
    "cache_ttl": 3600,
    "lazy_loading": true,
    "background_learning": true,
    "max_memory_usage": "100MB"
  },
  "metrics": {
    "track_performance": true,
    "metrics_to_track": [
      "autocomplete_acceptance_rate",
      "suggestion_accuracy",
      "learning_speed",
      "pattern_confidence",
      "user_satisfaction"
    ],
    "reporting": {
      "enabled": true,
      "frequency": "weekly",
      "format": "dashboard"
    }
  },
  "advanced_features": {
    "predictive_completion": {
      "enabled": true,
      "predicts_next_lines": 5,
      "uses_learned_patterns": true
    },
    "context_aware_suggestions": {
      "enabled": true,
      "considers": [
        "current_file",
        "related_files",
        "project_structure",
        "git_history",
        "learned_patterns"
      ]
    },
    "smart_refactoring": {
      "enabled": true,
      "suggests_refactorings_based_on_patterns": true,
      "auto_applies_learned_style": true
    },
    "pattern_based_documentation": {
      "enabled": true,
      "generates_docs_in_learned_style": true
    }
  },
  "activation": {
    "auto_start": true,
    "requires_user_consent": false,
    "can_be_disabled": true,
    "reset_learning": {
      "command": "/reset-pattern-learning",
      "requires_confirmation": true
    }
  }
}
