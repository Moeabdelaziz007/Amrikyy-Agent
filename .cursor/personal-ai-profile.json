{
  "personal_ai_profile": {
    "version": "1.0.0",
    "name": "Your Personal Coding AI",
    "description": "AI that learns YOUR specific coding style, preferences, and patterns",
    "learning_mode": "ultra_personalized",
    "adaptation_level": "maximum"
  },
  
  "learning_system": {
    "observe_and_learn": {
      "enabled": true,
      "learn_from": [
        "every_code_change",
        "every_commit_message",
        "every_file_you_create",
        "every_refactoring_you_do",
        "every_comment_you_write",
        "every_function_you_name",
        "every_pattern_you_use",
        "every_library_you_choose",
        "every_error_you_fix",
        "every_test_you_write"
      ],
      "learning_speed": "fast",
      "memory_retention": "permanent"
    },
    
    "pattern_detection": {
      "enabled": true,
      "detect": [
        "your_naming_conventions",
        "your_code_structure_preferences",
        "your_favorite_patterns",
        "your_error_handling_style",
        "your_commenting_style",
        "your_testing_approach",
        "your_file_organization",
        "your_import_style",
        "your_function_length_preference",
        "your_variable_naming_style"
      ],
      "confidence_threshold": 0.7,
      "update_frequency": "real_time"
    },
    
    "preference_tracking": {
      "enabled": true,
      "track": {
        "code_style": {
          "indentation": "auto_detect",
          "quotes": "auto_detect",
          "semicolons": "auto_detect",
          "trailing_commas": "auto_detect",
          "line_length": "auto_detect",
          "bracket_style": "auto_detect"
        },
        "naming": {
          "variables": "auto_learn",
          "functions": "auto_learn",
          "classes": "auto_learn",
          "files": "auto_learn",
          "constants": "auto_learn"
        },
        "architecture": {
          "preferred_patterns": "auto_learn",
          "folder_structure": "auto_learn",
          "component_organization": "auto_learn",
          "separation_of_concerns": "auto_learn"
        },
        "libraries": {
          "preferred_libraries": "auto_track",
          "avoided_libraries": "auto_track",
          "library_usage_patterns": "auto_learn"
        },
        "testing": {
          "test_framework": "auto_detect",
          "test_style": "auto_learn",
          "coverage_preference": "auto_learn",
          "test_naming": "auto_learn"
        }
      }
    }
  },
  
  "personalization_features": {
    "code_completion": {
      "enabled": true,
      "style": "match_your_style",
      "suggestions": "based_on_your_patterns",
      "priority": "your_frequently_used_patterns_first"
    },
    
    "code_generation": {
      "enabled": true,
      "style": "exactly_like_you_write",
      "naming": "follow_your_conventions",
      "structure": "match_your_architecture",
      "comments": "your_commenting_style"
    },
    
    "refactoring_suggestions": {
      "enabled": true,
      "style": "suggest_patterns_you_like",
      "avoid": "patterns_you_rejected_before",
      "priority": "improvements_you_care_about"
    },
    
    "error_detection": {
      "enabled": true,
      "focus_on": "errors_you_commonly_make",
      "ignore": "warnings_you_always_dismiss",
      "suggest_fixes": "in_your_style"
    },
    
    "documentation": {
      "enabled": true,
      "style": "match_your_doc_style",
      "level": "your_preferred_detail_level",
      "format": "your_preferred_format"
    }
  },
  
  "smart_suggestions": {
    "context_aware": {
      "enabled": true,
      "understand": [
        "what_you_are_working_on",
        "what_you_just_did",
        "what_you_might_do_next",
        "what_problems_you_might_face",
        "what_patterns_fit_here"
      ]
    },
    
    "predictive": {
      "enabled": true,
      "predict": [
        "next_function_you_will_write",
        "next_file_you_will_create",
        "next_refactoring_you_will_do",
        "next_test_you_will_write",
        "next_bug_you_might_encounter"
      ]
    },
    
    "proactive": {
      "enabled": true,
      "suggest_before_you_ask": [
        "potential_improvements",
        "code_smells",
        "performance_issues",
        "security_concerns",
        "missing_tests",
        "documentation_gaps"
      ]
    }
  },
  
  "learning_triggers": {
    "when_you_accept_suggestion": {
      "action": "reinforce_this_pattern",
      "confidence_boost": 0.1,
      "remember": "you_like_this_approach"
    },
    
    "when_you_reject_suggestion": {
      "action": "learn_what_you_dont_like",
      "confidence_decrease": 0.1,
      "remember": "avoid_this_in_future"
    },
    
    "when_you_modify_suggestion": {
      "action": "learn_your_preferred_variation",
      "analyze": "what_you_changed",
      "remember": "your_preferred_way"
    },
    
    "when_you_write_code": {
      "action": "observe_and_learn_patterns",
      "analyze": [
        "structure",
        "naming",
        "patterns",
        "style"
      ],
      "update": "your_profile"
    },
    
    "when_you_refactor": {
      "action": "learn_your_refactoring_preferences",
      "analyze": [
        "what_you_changed",
        "why_you_changed_it",
        "pattern_you_applied"
      ],
      "remember": "your_refactoring_style"
    }
  },
  
  "memory_system": {
    "short_term": {
      "description": "Current session memory",
      "stores": [
        "what_you_are_working_on_now",
        "recent_changes",
        "current_context",
        "immediate_patterns"
      ],
      "duration": "current_session"
    },
    
    "long_term": {
      "description": "Permanent learning memory",
      "stores": [
        "your_coding_style",
        "your_preferences",
        "your_patterns",
        "your_habits",
        "your_decisions"
      ],
      "location": "openmemory.md + .cursor/your-profile.json",
      "duration": "permanent"
    },
    
    "episodic": {
      "description": "Memory of specific coding sessions",
      "stores": [
        "what_you_built",
        "how_you_built_it",
        "problems_you_solved",
        "decisions_you_made"
      ],
      "location": "openmemory.md (Recent Changes section)",
      "duration": "permanent"
    }
  },
  
  "adaptation_strategies": {
    "fast_learning": {
      "enabled": true,
      "learn_from_few_examples": true,
      "confidence_threshold": 0.6,
      "description": "Learn your style quickly from just a few examples"
    },
    
    "continuous_improvement": {
      "enabled": true,
      "always_learning": true,
      "never_stop_adapting": true,
      "description": "Continuously improve understanding of your style"
    },
    
    "context_switching": {
      "enabled": true,
      "detect_context_changes": true,
      "adapt_to_different_projects": true,
      "description": "Adapt when you switch between different types of code"
    }
  },
  
  "smart_features": {
    "auto_complete_your_thoughts": {
      "enabled": true,
      "description": "Complete code the way YOU would write it",
      "accuracy_target": 0.95
    },
    
    "predict_your_next_move": {
      "enabled": true,
      "description": "Predict what you will code next",
      "suggestions": "ready_before_you_ask"
    },
    
    "understand_your_intent": {
      "enabled": true,
      "description": "Understand what you want even from vague descriptions",
      "intelligence": "read_between_the_lines"
    },
    
    "speak_your_language": {
      "enabled": true,
      "description": "Communicate in your preferred style",
      "tone": "match_your_communication_style",
      "technical_level": "match_your_expertise"
    },
    
    "remember_everything": {
      "enabled": true,
      "description": "Remember every decision, pattern, and preference",
      "recall": "instant",
      "context": "always_available"
    }
  },
  
  "personalization_levels": {
    "level_1_basic": {
      "description": "Learn basic style preferences",
      "features": [
        "indentation",
        "quotes",
        "semicolons"
      ]
    },
    
    "level_2_intermediate": {
      "description": "Learn naming and structure preferences",
      "features": [
        "naming_conventions",
        "file_organization",
        "import_style"
      ]
    },
    
    "level_3_advanced": {
      "description": "Learn architectural patterns and design preferences",
      "features": [
        "design_patterns",
        "architecture_style",
        "code_organization"
      ]
    },
    
    "level_4_expert": {
      "description": "Understand your coding philosophy and decision-making",
      "features": [
        "why_you_choose_patterns",
        "your_trade_off_preferences",
        "your_quality_standards"
      ]
    },
    
    "level_5_mind_reader": {
      "description": "Predict your intent and complete your thoughts",
      "features": [
        "predict_next_code",
        "understand_vague_requests",
        "suggest_before_you_ask",
        "code_exactly_like_you"
      ],
      "current_target": true
    }
  },
  
  "feedback_loop": {
    "enabled": true,
    "collect_feedback": {
      "explicit": [
        "when_you_accept_suggestion",
        "when_you_reject_suggestion",
        "when_you_modify_suggestion"
      ],
      "implicit": [
        "what_code_you_write",
        "what_patterns_you_use",
        "what_you_refactor",
        "what_you_delete"
      ]
    },
    
    "apply_learning": {
      "immediately": true,
      "update_profile": "real_time",
      "adjust_suggestions": "next_suggestion"
    },
    
    "measure_accuracy": {
      "track": [
        "suggestion_acceptance_rate",
        "code_match_accuracy",
        "prediction_accuracy",
        "user_satisfaction"
      ],
      "target": {
        "acceptance_rate": 0.95,
        "code_match": 0.90,
        "prediction": 0.85
      }
    }
  },
  
  "privacy_and_control": {
    "your_data": {
      "stored_locally": true,
      "never_shared": true,
      "you_own_it": true,
      "you_control_it": true
    },
    
    "transparency": {
      "show_what_ai_learned": true,
      "explain_suggestions": true,
      "show_confidence_scores": true
    },
    
    "control": {
      "disable_learning": "anytime",
      "reset_profile": "anytime",
      "export_profile": "anytime",
      "delete_data": "anytime"
    }
  },
  
  "initial_setup": {
    "quick_start": {
      "enabled": true,
      "steps": [
        "Analyze your existing code",
        "Detect your patterns",
        "Learn your style",
        "Build initial profile",
        "Start personalized suggestions"
      ],
      "estimated_time": "5 minutes"
    },
    
    "deep_analysis": {
      "enabled": true,
      "analyze": [
        "all_your_code_files",
        "all_your_commits",
        "all_your_patterns",
        "all_your_preferences"
      ],
      "estimated_time": "30 minutes",
      "accuracy": "very_high"
    }
  }
}
