{
  "manifest_version": 3,
  "name": "Project Sentinel Dashboard",
  "version": "0.1.0",
  "description": "A smart dashboard to monitor deployments, tests, and AI agents for the Amrikyy project.",
  "icons": {
    "16": "icons/icon16.png",
