# Frontend Test Environment Configuration
# Copy this file to .env.test and configure for your test environment

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TIMEOUT=30000
VITE_API_RETRIES=3

# Test Configuration
VITE_TEST_MODE=true
VITE_TEST_USER_ID=test-user-123
VITE_TEST_CONVERSATION_ID=test-conv-123

# Mock Data Configuration
VITE_MOCK_API_RESPONSES=true
VITE_MOCK_DELAY=500

# Browser Configuration
VITE_BROWSER_HEADLESS=false
VITE_BROWSER_SLOW_MO=100

# Test Data
VITE_TEST_DESTINATION=Tokyo
VITE_TEST_BUDGET=3000
VITE_TEST_TRAVELERS=2

# Authentication (for testing)
VITE_TEST_AUTH_TOKEN=test-jwt-token
VITE_TEST_USER_EMAIL=test@example.com
VITE_TEST_USER_PASSWORD=testpassword123

# Feature Flags (for testing)
VITE_ENABLE_EMOTION_DETECTION=true
VITE_ENABLE_FRIENDSHIP_TRACKING=true
VITE_ENABLE_SKILL_SYSTEM=true
VITE_ENABLE_VOICE_ADAPTATION=true

# Performance Testing
VITE_PERFORMANCE_TESTING=false
VITE_MAX_RESPONSE_TIME=10000
VITE_MAX_LOAD_TIME=5000

# Accessibility Testing
VITE_ACCESSIBILITY_TESTING=false
VITE_SKIP_ACCESSIBILITY_RULES=WCAG2A,WAVE

# CI/CD Configuration
CI=false
FRONTEND_BASE_URL=http://localhost:3000
BACKEND_BASE_URL=http://localhost:3001