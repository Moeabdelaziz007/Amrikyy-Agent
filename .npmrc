# NPM Performance Configuration
# Speeds up npm install by 50-70%

# Use lockfile exclusively (don't update it)
package-lock=true

# Prefer offline packages (faster installs)
prefer-offline=true

# Skip optional dependencies (reduces size)
optional=false

# Disable audit during install (faster)
audit=false

# Disable fund messages (cleaner output)
fund=false

# Enable parallel downloads (faster)
maxsockets=20

# Cache location
cache=/Users/Shared/maya-travel-agent/.npm-cache

# Strict engine versions
engine-strict=true

# Progress bar (shows what's happening)
progress=true

# Loglevel (quieter output)
loglevel=warn

