# Localization
SUPPORTED_LANGUAGES=ar,en
DEFAULT_LANGUAGE=ar
CURRENCY_SUPPORT=SAR,USD,EUR,AED

# ==============================================
# MONITORING & ALERTS
# ==============================================

# Health Check Endpoints
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Alert Configuration
ALERT_EMAIL=admin@amrikyytrips.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/your/webhook/url
ALERT_DISCORD_WEBHOOK=https://discord.com/api/webhooks/your/webhook

# Performance Thresholds
MAX_RESPONSE_TIME_MS=5000
MAX_AI_RESPONSE_TIME_MS=10000
ERROR_RATE_THRESHOLD=0.05

# ==============================================
# ADVANCED AI CONFIGURATION
# ==============================================

# AI Model Configuration
PRIMARY_AI_MODEL=glm-4.6
FALLBACK_AI_MODEL=glm-4
AI_RETRY_ATTEMPTS=3
AI_TIMEOUT_MS=30000

# AI Tools Configuration
ENABLE_TOOL_CALLING=true
MAX_TOOLS_PER_REQUEST=3
TOOL_CALL_TIMEOUT_MS=15000

# Conversation Management
CONVERSATION_MEMORY_LIMIT=50
CONTEXT_WINDOW_SIZE=20
PERSONALIZATION_WEIGHT=0.8

# ==============================================
# REDIS CACHING LAYER
# ==============================================

# Redis Configuration (for caching, rate limiting, and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false
REDIS_MAX_CONNECTIONS=10
REDIS_CONNECT_TIMEOUT=60000
REDIS_COMMAND_TIMEOUT=5000

# Redis Cache Configuration
REDIS_CACHE_TTL=3600
REDIS_CACHE_PREFIX=amrikyy:
REDIS_SESSION_TTL=86400

# Redis Rate Limiting Configuration
REDIS_RATE_LIMIT_PREFIX=ratelimit:
REDIS_RATE_LIMIT_WINDOW=900000
REDIS_RATE_LIMIT_MAX_REQUESTS=100

