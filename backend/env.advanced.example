# Production URLs
PRODUCTION_API_URL=https://api.amrikyytrips.com
PRODUCTION_WEB_URL=https://amrikyytrips.com
PRODUCTION_BOT_URL=https://t.me/your_bot_username

# CDN & Static Assets
CDN_URL=https://cdn.amrikyytrips.com
ASSETS_BASE_URL=https://assets.amrikyytrips.com

