# BACKUP & RECOVERY
# ==============================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# ==============================================
# COMPLIANCE & LEGAL
# ==============================================

# GDPR Compliance
ENABLE_GDPR_COMPLIANCE=true
DATA_RETENTION_POLICY=365_days
PRIVACY_POLICY_URL=https://amrikyytrips.com/privacy
