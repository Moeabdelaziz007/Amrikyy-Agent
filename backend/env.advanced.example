# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable/Disable Features
ENABLE_WEATHER_TOOLS=true
ENABLE_FLIGHT_SEARCH=true
ENABLE_HOTEL_SEARCH=true
ENABLE_HALAL_RESTAURANTS=true
ENABLE_PRAYER_TIMES=true
ENABLE_CURRENCY_CONVERSION=true
ENABLE_VISA_CHECK=true
ENABLE_SAFETY_ALERTS=true
ENABLE_MULTIMODAL_AI=true
ENABLE_VOICE_MESSAGES=true
ENABLE_IMAGE_ANALYSIS=true

# Advanced Features
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_PREDICTIVE_RECOMMENDATIONS=true
ENABLE_BEHAVIOR_TRACKING=true
ENABLE_A_B_TESTING=false
ENABLE_REAL_TIME_ANALYTICS=true

# ==============================================
# CACHING & PERFORMANCE
# ==============================================

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

