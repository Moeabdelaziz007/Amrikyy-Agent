# Maya Travel Agent - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM PROVIDERS CONFIGURATION
# =============================================================================

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Z.ai API (GLM-4.6)
ZAI_API_KEY=your_zai_api_key_here
ZAI_MODEL=GLM-4.6

# LLM Service Configuration
LLM_PRIMARY_PROVIDER=gemini
LLM_FALLBACK_PROVIDERS=zai
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=1000
LLM_TIMEOUT=30000

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# AIX ENHANCED CURSOR MANAGER CONFIGURATION
# =============================================================================
AIX_DIRECTORY=./agents/aix
AIX_FEEDBACK_ENABLED=true
AIX_QUANTUM_ENABLED=true
AIX_MEMORY_ENABLED=true
AIX_MAX_CONCURRENT_TASKS=10
AIX_TASK_TIMEOUT=30000
AIX_VERBOSE=false
