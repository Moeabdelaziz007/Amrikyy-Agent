{
  "name": "maya-trips-backend",
  "version": "1.0.0",
  "description": "Maya Trips Backend API Server",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "build": "echo 'Backend build completed'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "validate-apis": "node scripts/validate-apis.js",
    "validate-travel-apis": "node scripts/validate-travel-apis.js",
    "prestart": "npm run validate-travel-apis || echo 'Warning: API validation failed'",
    "health-check": "node scripts/validate-travel-apis.js && echo 'All systems operational'"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.74.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^9.0.0",
    "langsmith": "^0.3.74",
    "mongoose": "^7.0.0",
    "multer": "^2.0.2",
    "node-fetch": "^2.6.7",
    "node-telegram-bot-api": "^0.66.0",
    "paypal-rest-sdk": "^1.8.1",
    "redis": "^4.6.13",
    "sqlite3": "^5.1.7",
    "stripe": "^13.6.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "chai": "^6.2.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "travel",
    "api",
    "backend",
    "maya",
    "trips"
  ],
  "author": "Maya Trips Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
