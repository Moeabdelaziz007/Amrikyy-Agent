# Backend Test Environment Configuration
# Copy this file to .env.test and configure for your test environment

# Server Configuration
NODE_ENV=test
PORT=3002
HOST=localhost

# Database Configuration (Test Database)
SUPABASE_URL=https://test.supabase.co
SUPABASE_ANON_KEY=test-anon-key
SUPABASE_SERVICE_ROLE_KEY=test-service-role-key
DATABASE_URL=postgresql://test:test@localhost:5432/maya_test

# External Services (Mock/Test Keys)
JSONBIN_API_KEY=test-jsonbin-key
OPENAI_API_KEY=test-openai-key
TELEGRAM_BOT_TOKEN=test-telegram-token
STRIPE_SECRET_KEY=sk_test_test
STRIPE_WEBHOOK_SECRET=whsec_test

# Authentication
JWT_SECRET=test-jwt-secret
JWT_EXPIRES_IN=1h
BCRYPT_ROUNDS=8

# API Configuration
API_BASE_URL=http://localhost:3002
API_TIMEOUT=30000
API_RETRIES=3

# Test Configuration
TEST_MODE=true
TEST_USER_ID=test-user-123
TEST_CONVERSATION_ID=test-conv-123
TEST_API_KEY=test-key

# Mock Services
MOCK_SUPABASE=true
MOCK_JSONBIN=true
MOCK_OPENAI=true
MOCK_TELEGRAM=true
MOCK_STRIPE=true

# Performance Testing
MAX_RESPONSE_TIME=10000
MAX_CONCURRENT_REQUESTS=50
ENABLE_PERFORMANCE_MONITORING=true

# Logging (Test Mode)
LOG_LEVEL=debug
LOG_TO_FILE=false
LOG_TO_CONSOLE=true

# Rate Limiting (Disabled for testing)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Caching (Disabled for testing)
ENABLE_CACHING=false
CACHE_TTL=300
REDIS_URL=redis://localhost:6379

# Monitoring (Disabled for testing)
ENABLE_METRICS=false
ENABLE_HEALTH_CHECKS=true
PROMETHEUS_PORT=9091

# Feature Flags (for testing)
ENABLE_EMOTION_DETECTION=true
ENABLE_FRIENDSHIP_TRACKING=true
ENABLE_SKILL_SYSTEM=true
ENABLE_VOICE_ADAPTATION=true
ENABLE_BOSS_AGENT=true

# Test Data
TEST_DESTINATION=Tokyo
TEST_BUDGET=3000
TEST_TRAVELERS=2
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

# CI/CD Configuration
CI=false
BACKEND_BASE_URL=http://localhost:3002
FRONTEND_BASE_URL=http://localhost:3000