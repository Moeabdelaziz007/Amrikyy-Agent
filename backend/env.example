# Maya Trips Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# Database (Supabase)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/payment/telegram-webhook

# Telegram Mini App Configuration
WEB_APP_URL=https://yourdomain.com
TELEGRAM_MINI_APP_URL=https://yourdomain.com
FRONTEND_URL=http://localhost:3000

# Z.ai GLM-4.6 Configuration
ZAI_API_KEY=your_zai_api_key_here
ZAI_API_BASE_URL=https://api.z.ai/api/paas/v4
ZAI_MODEL=glm-4.6
ZAI_MAX_TOKENS=2000
ZAI_TEMPERATURE=0.7

# Payment Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Confluent Cloud Configuration (for event streaming)
CONFLUENT_BOOTSTRAP_SERVERS=your_confluent_bootstrap_servers_here
CONFLUENT_SASL_USERNAME=your_confluent_api_key_here
CONFLUENT_SASL_PASSWORD=your_confluent_api_secret_here
CONFLUENT_GROUP_ID=maya-service-bus

# Fivetran Configuration
FIVETRAN_API_KEY=your_fivetran_api_key_here
FIVETRAN_API_SECRET=your_fivetran_api_secret_here
FIVETRAN_ACCOUNT_ID=your_fivetran_account_id_here

# Dataiku ML Platform Configuration
DATAIKU_BASE_URL=https://your-dataiku-instance.com
DATAIKU_API_KEY=your_dataiku_api_key_here
DATAIKU_PROJECT_KEY=MAYA_TRAVEL_AGENT
