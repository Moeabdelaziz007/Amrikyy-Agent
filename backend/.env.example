# Gemini AI (REQUIRED for Voice AI)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="AIzaSy-your-actual-gemini-api-key-here"
GOOGLE_AI_API_KEY="AIzaSy-your-actual-gemini-api-key-here"
GEMINI_MODEL="gemini-2.0-flash-exp"
GEMINI_PRO_MODEL="gemini-2.5-pro"

# Supabase Database
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Stripe Payment (Test Mode)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# PayPal Payment (Sandbox Mode)
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox"
PAYPAL_WEBHOOK_ID="your-webhook-id"

# Telegram Bot
TELEGRAM_BOT_TOKEN="your-bot-token"

# Travel APIs
KIWI_API_KEY="your-kiwi-api-key"
BOOKING_COM_AFFILIATE_ID="your-booking-affiliate-id"
