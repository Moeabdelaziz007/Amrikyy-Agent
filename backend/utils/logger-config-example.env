# ============================================
# ULTRA-SMART LOGGER CONFIGURATION
# ============================================

# Log Level: ERROR, WARN, INFO, DEBUG
# Lower levels include higher levels (DEBUG includes all)
LOG_LEVEL=INFO

# Console Output Control
# Set to false in production for better performance
# Default: true in development, false in production
LOG_TO_CONSOLE=true

# File Output Control
# Set to false to disable file logging completely
# Default: true
LOG_TO_FILE=true

# Sampling Rate (0.0 to 1.0)
# 1.0 = log everything (default)
# 0.5 = log 50% of messages (randomly sampled)
# 0.1 = log 10% of messages
# Use lower values for high-frequency logs in production
LOG_SAMPLING_RATE=1.0

# Batch Size
# Number of logs to accumulate before writing to file
# Higher = better performance, but more memory usage
# Default: 100
LOG_BATCH_SIZE=100

# Flush Interval (milliseconds)
# How often to flush logs to file
# Lower = more real-time, but more I/O
# Higher = better performance, but delayed writes
# Default: 5000 (5 seconds)
LOG_FLUSH_INTERVAL=5000

# Log Format
# text = human-readable format (default)
# json = structured JSON format (better for log aggregation tools)
LOG_FORMAT=text

# Log Compression
# Compress logs older than 1 day
# Default: true
LOG_COMPRESS=true

