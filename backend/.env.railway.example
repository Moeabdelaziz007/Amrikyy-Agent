# ========================================
# Railway Deployment - Environment Variables
# ========================================
# Copy these to Railway dashboard â†’ Variables
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# ========================================
# DATABASE (Auto-injected by Railway)
# ========================================
# Railway automatically provides these when you add PostgreSQL
DATABASE_URL=${{Postgres.DATABASE_URL}}
REDIS_URL=${{Redis.REDIS_URL}}

# ========================================
# SUPABASE (Required)
# ========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ========================================
# AI CONFIGURATION
# ========================================
# Z.ai / Kelo AI
KELO_API_KEY=your_kelo_api_key_here
KELO_API_BASE_URL=https://api.kelo.ai/v4
KELO_MODEL=glm-4.6
KELO_MAX_TOKENS=2000
KELO_TEMPERATURE=0.7

# OpenRouter (Alternative)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=meta-llama/llama-3.1-8b-instruct:free

# ========================================
# TRAVEL APIs (Required)
# ========================================
KIWI_API_KEY=your_kiwi_api_key_here
KIWI_API_BASE_URL=https://api.tequila.kiwi.com

BOOKING_COM_AFFILIATE_ID=your_booking_affiliate_id_here
BOOKING_COM_API_KEY=your_booking_api_key_here
BOOKING_COM_API_BASE_URL=https://distribution-xml.booking.com/2.7/json

MAPBOX_API_KEY=your_mapbox_api_key_here
MAPBOX_API_BASE_URL=https://api.mapbox.com

# ========================================
# PAYMENT PROVIDERS
# ========================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live

# ========================================
# TELEGRAM
# ========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-app.up.railway.app/api/payment/telegram-webhook
WEB_APP_URL=https://your-frontend.vercel.app
TELEGRAM_MINI_APP_URL=https://your-frontend.vercel.app

# ========================================
# WHATSAPP BUSINESS API
# ========================================
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_API_VERSION=v21.0

# ========================================
# SECURITY
# ========================================
JWT_SECRET=your_jwt_secret_minimum_32_characters_random_string
ENCRYPTION_KEY=your_encryption_key_minimum_32_characters_random_string

# ========================================
# CORS CONFIGURATION
# ========================================
FRONTEND_URL=https://your-frontend.vercel.app
CORS_ORIGIN=https://your-frontend.vercel.app
TELEGRAM_WEBAPP_URL=https://your-frontend.vercel.app

# ========================================
# CACHE TTL (Optional - defaults provided)
# ========================================
REDIS_TTL_FLIGHT=300
REDIS_TTL_HOTEL=3600
REDIS_TTL_LOCATION=86400
REDIS_TTL_AI=1800
REDIS_TTL_USER=3600

# ========================================
# RATE LIMITING (Optional - defaults provided)
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# NOTES FOR RAILWAY DEPLOYMENT
# ========================================
# 1. DATABASE_URL and REDIS_URL are auto-injected by Railway
# 2. Use ${{Postgres.DATABASE_URL}} syntax to reference Railway services
# 3. All other variables must be manually added in Railway dashboard
# 4. Generate strong secrets using: openssl rand -base64 32
# 5. Update FRONTEND_URL after deploying frontend to Vercel
# ========================================
